# Group System Deployment Configuration
# Copy to .env and fill in your values

# Network Configuration
NETWORK=polygon # or amoy for testnet
RPC_URL=https://polygon-rpc.com
CHAIN_ID=137

# Deployer Configuration
PRIVATE_KEY=your_private_key_here
ADMIN_WALLET=0xYourAdminWalletAddress

# Existing Contract Addresses (Required)
# These must be deployed before group system
NFT_CONTRACT_ADDRESS=0xYourRiddleNFTv3Address
RON_CONTRACT_ADDRESS=0xYourRONAdvancedAddress
RDLN_TOKEN_ADDRESS=0xYourRDLNUpgradeableAddress

# For Upgrades (if using UUPS proxies)
RON_PROXY_ADDRESS=0xYourRONProxyAddress
RDLN_PROXY_ADDRESS=0xYourRDLNProxyAddress

# Group System Addresses (filled after deployment)
GROUP_VALIDATOR_ADDRESS=
GROUP_MANAGER_ADDRESS=

# Etherscan Verification (optional)
ETHERSCAN_API_KEY=your_polygonscan_api_key
VERIFY_CONTRACTS=true

# Testing Configuration
TESTNET_FAUCET=https://faucet.polygon.technology
TEST_ACCOUNTS=wallet1,wallet2,wallet3

# Gas Configuration
GAS_PRICE=50 # in gwei
GAS_LIMIT=8000000

# Deployment Flags
SKIP_CONFIRMATIONS=false
DRY_RUN=false