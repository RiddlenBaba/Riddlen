# Riddlen Frontend Environment Variables
# Copy this file to .env.local and fill in your values

# WalletConnect Project ID (get from https://cloud.walletconnect.com/)
NEXT_PUBLIC_WALLETCONNECT_PROJECT_ID=your_walletconnect_project_id_here

# Optional: Custom RPC endpoints for better performance
NEXT_PUBLIC_POLYGON_AMOY_RPC=https://rpc-amoy.polygon.technology/

# Contract addresses (already configured in lib/wagmi.js but can be overridden)
NEXT_PUBLIC_RDLN_CONTRACT=0x133029184EC460F661d05b0dC57BFC916b4AB0eB
NEXT_PUBLIC_RON_CONTRACT=0xD86b146Ed091b59cE050B9d40f8e2760f14Ab635
NEXT_PUBLIC_RIDDLE_NFT_CONTRACT=0x529e3076cB9A48D6FAd086abE5d23ea76159e9E3

# Analytics (optional)
NEXT_PUBLIC_GA_TRACKING_ID=your_google_analytics_id

# API Keys for enhanced features (optional)
NEXT_PUBLIC_ETHERSCAN_API_KEY=your_etherscan_api_key